################################

binary-convert () {
    case $1 in
        -b|b)
            echo "$2" | perl -lpe '$_=join " ", unpack"(B8)*"'
            ;;
        -a|a)
            echo "$2" | perl -lape '$_=pack"(B8)*",@F'
            ;;
        0*|1*)
            echo "$@" | perl -lape '$_=pack"(B8)*",@F'
            ;;
        *)
            echo "$@" | perl -lpe '$_=join " ", unpack"(B8)*"'
            ;;
    esac
}

decomp () {
    if [ -f "$1" ] ; then
        case "$1" in
            *.tar.*|*.tar)
                tar -xf "$1"
                ;;
            *.bz2)
                bunzip2 "$1"
                ;;
            *.rar)
                unrar x "$1"
                ;;
            *.gz)
                gunzip "$1"
                ;;
            *.jar|*.zip)
                unzip "$1"
                ;;
            *.Z)
                uncompress "$1"
                ;;
            *)
                echo "'$1' cannot be extracted"
                ;;
        esac
    else
        echo "'$1' is not a file"
    fi
}

dirsize () { du -h --max-depth=1 "$@" | sort -h -r }

dirsize-a () { du -h "$@" | sort -h -r }

downforme () {
    RED='\e[1;31m'
    GREEN='\e[1;32m'
    YELLOW='\e[1;33m'
    NC='\e[0m'
    if [ $# = 0 ]
    then
        echo -e "${YELLOW}usage:${NC} downforme website_url"
    else
        JUSTYOUARRAY=($(wget -qO - "http://downforeveryoneorjustme.com/$1" | grep -o "It's just you"))
        if [ ${#JUSTYOUARRAY} != 0 ]
        then
            echo -e "${RED}It's just you. \n${NC}$1 is up."
        else
            echo -e "${GREEN}It's not just you! \n${NC}$1 looks down from here."
        fi
    fi
}

filesize () { du -h -a --max-depth=1 "$@" | sort -h -r }

filesize-a () { du -h -a "$@" | sort -h -r }

mpc-current () {
    while true; do
        echo "$(tput setaf 4)$(mpc current --wait -f "\n\nArtist: %artist%\nSong: %title%")"
