dirsize () {
    du -H --max-depth=1 "$@" | sort -n -r
}

dirsize-a () {
    du -H "$@" | sort -n -r
}

filesize () {
    du -a --max-depth=1 "$@" | sort -n -r
}

filesize-a () {
    du -a "$@" | sort -n -r
}

remote-exec () {
    bash -c "$(wget --quiet $@ -O -)"
}

sdif () {
    sudo  dpkg -i $2 || sudo apt install -f
}

todo () {
    echo
    echo "TODO LIST:"
    cat ~/TODO.txt
    echo
}

todo-a () {
    echo "$@" >> ~/TODO.txt
    echo
    echo "TODO LIST:"
    cat ~/TODO.txt
    echo
}

todo-r () {
    TODOITEM="$(grep -a "$@" ~/TODO.txt)"
    DELNUM="$(echo "$TODOITEM" | wc -l)"
    if ! grep -q "$@" ~/TODO.txt; then
        echo "$@ not found in TODO list!"
        exit 1
    fi
    if [[ "$DELNUM" != "1" ]]; then
        echo "$DELNUM results found; refine your input."
        exit 1
    fi
    sed -i s:"$TODOITEM"::g ~/TODO.txt
    sed -i '/^$/d' ~/TODO.txt
    echo
    echo "TODO LIST:"
    cat ~/TODO.txt
    echo
}

wttr (){
    LOCATION="$1"
    FLOCATION="$2"
    case $1 in
        0*)
            if [ -z "$FLOCATION" ]; then
                FLOCATION="$location"
            fi
            tput reset
            curl "wttr.in/$FLOCATION?0"
            LOCATION=""
            FLOCATION=""
            ;;
        1*)
            if [ -z "$FLOCATION" ]; then
                FLOCATION="$location"
            fi
            tput reset
            curl "wttr.in/$FLOCATION?1"
            LOCATION=""
            FLOCATION=""
            ;;
        2*)
            if [ -z "$FLOCATION" ]; then
                FLOCATION="$location"
            fi
            tput reset
            curl "wttr.in/$FLOCATION?2"
            LOCATION=""
            FLOCATION=""
            ;;
        *)
            if [ -z "$LOCATION" ]; then
                LOCATION="$location"
            fi
            tput reset
            curl "wttr.in/$LOCATION"
            LOCATION=""
    esac
}